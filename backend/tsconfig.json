{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src", // Indica que nuestro código fuente estará en la carpeta src
    "outDir": "./dist", // Indica dónde se guardará el código compilado
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}